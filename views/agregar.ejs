<section id="main-content">
    <!-- Basic Forms & Horizontal Forms-->

    <div class="row">
        <div class="col-lg-2">
      
        </div>
        <div class="col-lg-8">
            <section class="panel panel-success">
              <header class="panel-heading">
                Datos del Manual
              </header>
              <div class="panel-body">
                <form role="form" method="POST", action="/save", enctype="multipart/form-data">
                  <div class="form-group">
                    <div class="row">
                    <div class="col-md-6">
                        <label for="exampleInputEmail1">Nombre del Manual</label>
                        <input type="text" name="nombre" class="form-control" id="exampleInputEmail1" placeholder="Ingresa el nombre del manual">
                    </div> 
                    <div class="col-md-6">
                        <label for="exampleInputEmail1">Precio</label>
                        <input type="number" name="precio" class="form-control" id="exampleInputEmail1" placeholder="$">
                        </div> 
                    </div>
                  </div>
                  <div class="form-group">
                      <div class="row">
                          <div class="col-md-6">
                              <label for="exampleInputEmail1">Cantidad</label>
                              <input type="number" name="cantidad" class="form-control" id="exampleInputEmail1" placeholder="Manuales Disponibles">
                          </div> 
                          <div class="form-group">
                              <label for="exampleInputFile">Imagen</label>
                              <input type="file" name="uploaded_pdf" accept="">
                            </div> 
                          </div>
                  </div>
                  <div class="form-group">
                      <label for="exampleInputFile">Descripción</label>
                      <textarea type="text" class="form-control" rows="5" name="descripcion"  placeholder="Escribe tu Comentario" required="" required=""></textarea>
                  </div>

                  <div class="form-group">
                      <div class="row">
                          <div class="col-md-6">
                              <label for="exampleInputEmail1">Autor:</label>
                              <input type="text" name="autor" class="form-control" id="exampleInputEmail1" placeholder="Nombre del Autor">
                          </div> 
                          <div class="col-md-6">
                              <label for="exampleInputEmail1">Tecnología:</label>
                              <input type="text" name="tecnologia" class="form-control" id="exampleInputEmail1" placeholder="Tecnología usada">
                          </div> 
                          </div>
                  </div>

                  <div class="form-group">
                    <label for="exampleInputFile">Archivo</label>
                    <input type="file" name="uploaded_image" accept="">
                  </div><br>
                  <button type="submit" name="submit" class="btn btn-primary">Agregar Manual</button>
                </form>
  
              </div>
            </section>
          </div>
        <div class="col-lg-2">

        </div>
      </div>
